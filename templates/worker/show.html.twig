{% extends 'base.html.twig' %}

{% block title %} {{ worker.lastName }} - {{ parent() }}{% endblock %}

{% block body %}
<h3>{{ worker.firstName}} {{ worker.lastName }}</h3>
    <p>
        {{ worker.job ? worker.job.title : '' }}
        {{ 'worker.read.since'| trans({
            '%date%': worker.startDate |date('d-m-Y'),
        }, 'worker') }}
    </p>
     {{ 'worker.read.contract'| trans({
         '%workingTime%': worker.workingTime,
         '%wage%': worker.job.wage
     }, 'worker' ) }}
{% endblock %}