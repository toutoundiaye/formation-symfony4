{% extends 'base.html.twig' %}

{% block title %} {{ 'worker.page'|trans({}, 'worker') }} - {{ parent() }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ 'worker.title'|trans({}, 'worker') }}</h1>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'worker.lastName'|trans({}, 'worker') }}</th>
                <th>{{ 'worker.firstName'|trans({}, 'worker') }}</th>
                <th>{{ 'worker.jobTitle'|trans({}, 'worker') }}</th>
                <th>{{ 'worker.workingTime'|trans({}, 'worker') }}</th>
                <th>{{ 'worker.wage'|trans({}, 'worker') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for worker in workers %}
            <tr>
                <td>{{ worker.firstName }}</td>
                <td>{{ worker.lastName }}</td>
                <td>{{ worker.jobTitle }}</td>
                <td>{{ worker.workingTime }}</td>
                <td>{{ worker.wage }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
