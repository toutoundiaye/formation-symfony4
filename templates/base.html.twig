<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'base.title' | trans }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% endblock %}
    </head>
    <body>
        {% block header%}
            <div>
                <a href="{{ path('app_security_logout') }}">Log out</a>
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div> <a href="{{ path('app_security_login') }}"><button>Connexion</button></a></div>
                {% endif %}
            </div>
        {% include 'navbar.html.twig' only %}
        {% include 'flash.html.twig' only %}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
